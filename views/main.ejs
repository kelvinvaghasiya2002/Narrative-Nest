<%- include('partials/header'); -%>

<div id="Display" style="display: flex; flex-wrap: nowrap; flex-direction: row; gap: 20px;">
  <h4 class="alert">Stories are being shown in decreasing fashion according to upvotes.</h4>
  <button id="gotIt" style="background-color: #1ABC9C; border: none; height: 30px; margin-top: 95px;" class="btn btn-primary">Got it</button>
</div>

<% for(var i=0 ; i<arr.length ; i++){%>
    <% if(i==0){ %>
      <h3 class="h-3"><%= arr[i].name%></h3> <span class="upvote-span"><img src="./public/images/up-arrow.png" class="up-img"><b><%= arr[i].upvotes%> Upvotes</b></span>
      <span class="upvote-span"><b><%= arr[i].comments.length %> comments</b></span>
      <p class="postBody"><%=  arr[i].postBody.substring(0,200) +"..." %><a href="/posts/<%= arr[i].name%>">Read More</a></p>
    <% }else{ %>
      <h3 style=" margin-top: 50px; margin-left: 20px; font-family: 'REM', sans-serif;"><%=  arr[i].name%></h3> <span class="upvote-span"><img src="./public/images/up-arrow.png" class="up-img"><b><%= arr[i].upvotes%> Upvotes</b></span>
      <span class="upvote-span"><b><%= arr[i].comments.length %> comments</b></span>
      <p class="postBody"><%=  arr[i].postBody.substring(0,200) +"..." %><a href="/posts/<%= arr[i].name%>">Read More</a></p>
    <% } %>
<%} %>



<div class="footer-padding" style="padding-bottom: 60px;">
  <div class="footer" style="position: fixed;
    text-align: center;
    bottom: 0;
    width: 100%;
    height: 60px;
    background-color: #1abc9c;">
    <p style="margin-top: 25px;
    font-size: 12px;
    color: #fff;">Kelvin Vaghasiya @2023</p>
  </div>
</div>
<script>
  const button =  document.getElementById("gotIt");
  button.addEventListener("click",()=>{
    var x=document.getElementById("Display").classList.add("hide");
    var y=document.getElementsByClassName("h-3")[0].classList.add("margin");
  })
</script>
</body>
</html>