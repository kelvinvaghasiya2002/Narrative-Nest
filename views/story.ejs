<%- include('partials/header'); -%>

<h3 class="h-3" style="margin-top: 130px;"><%=name%></h3>
<span class="upvote-span"><b><%=upvotes%> Upvotes</b></span> <span class="upvote-span"><b><%= comments.length %> comments</b></span>
<p class="postBody"><%= postBody %></p>

<form action="/upvote" method="post">
    <button type="submit" class="btn btn-outline-primary"
    style="background-color:#1abc9c; color: navy; margin-left: 20px;" name="postName" value="<%=name%>">
    <b>Upvote</b>
    </button>
</form>

<h4 style=" font-family: 'REM', sans-serif; margin-left: 20px; margin-top: 50px;">Write your comments here</h4>

<form style="margin: 30px 0 50px; padding: 0 20px;" action="/comment" method="post">
    <div class="form-group">
        <div>
            <input style="margin-bottom: 15px;" type="text" name="Name" value="<%=name%>" readonly>
        </div>
        <label for="Title">Name</label>
        <textarea name="pName" class="form-control" id="Title" rows="1" cols="1"></textarea>
        <label for="Post">Comment</label>
        <textarea name="pComment" class="form-control" id="Post" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Post</button>
</form>


<h1 style="margin-left: 20px;">Comments</h1>

<div class="comment-section">
    <% comments.forEach((element)=>{ %>
        <div>
            <h3><%= element.name %></h3>
            <p style="max-width: 50%;"><%= element.post %></p>
        </div>
    <% }) %>
</div>



<div>
    <div class="footer" style="
      text-align: center;
      width: 100%;
      height: 60px;
      padding: 0;
      background-color: #1abc9c;">
      <p style="padding-top: 25px;
      font-size: 12px;
      color: #fff;">Kelvin Vaghasiya @2023</p>
    </div>
  </div>
</body>
</html>